# Yahoo Fantasy Sports API Credentials
# Get these from https://developer.yahoo.com/apps/
YAHOO_CLIENT_ID=your_client_id_here
YAHOO_CLIENT_SECRET=your_client_secret_here

# Yahoo Fantasy League Settings
YAHOO_LEAGUE_ID=your_league_id_here
YAHOO_GAME_KEY=nfl

# Notification Settings
NOTIFICATION_METHOD=console  # Options: console, email, desktop
EMAIL_RECIPIENT=your_email@example.com  # Only needed if using email notifications

# Check Interval (in minutes)
CHECK_INTERVAL=30

# Alert Window (in hours) - Only alert on injuries first seen within this window
# After this time, injuries are still tracked but no longer trigger alerts
ALERT_WINDOW_HOURS=24  # 24 hours = 1 day
